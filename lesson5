//create if/else for checking numbers, 
//if lower than 10 console 'Hello', if higher than 10 console 'Bye'

let a = 10
if (a<10) {
  console.log('Hello')
} else if (a>10) { console.log('Bye')}
else (console.log('Hello bye'))

