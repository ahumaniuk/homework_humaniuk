//create a loop from 0 to 10, inside create a variable 'NotDivide', 
//and assign numbers that can't divide 2 and console every time that number. 

for (let i = 0; i <= 10; i++) {
  let NotDivide;
  if ((i % 2 != 0)) { NotDivide =i; console.log('NotDivide is equal to' + NotDivide)}
}

//create loop with condition from 0 to 10,
